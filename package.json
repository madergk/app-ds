{
  "name": "app-ds-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo para MRS Design System y aplicaciones",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:app": "npm run start --workspace=app-ds",
    "dev:lib": "npm run dev --workspace=@mrs/components",
    "build:lib": "npm run build --workspace=@mrs/components",
    "build:app": "npm run build --workspace=app-ds",
    "start": "npm run start --workspace=app-ds"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
